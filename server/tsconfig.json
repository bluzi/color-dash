{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es7"
        ],
        "target": "esnext",
        "moduleResolution": "node",
        "module": "commonjs"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}